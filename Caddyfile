metsuke.app.br {
    # 1. API Backend (Redireciona as chamadas /api para o serviço backend)
    handle /api/* {
        reverse_proxy backend:8080
    }

    # 2. Uploads Locais (Caso ainda use armazenamento em disco)
    handle_path /uploads/* {
        root * /srv/uploads
        file_server
    }

    # 3. Frontend (Todo o resto vai para o React)
    reverse_proxy frontend:80

    # Compressão para velocidade
    encode gzip
}

# Redireciona quem digitar www para o domínio principal
www.metsuke.app.br {
    redir https://metsuke.app.br{uri}
}